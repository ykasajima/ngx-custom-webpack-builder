{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2017"
    ],
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "inlineSourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
